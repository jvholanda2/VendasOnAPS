extend layout.pug
block content
    div.content
        div.content-title 
            h1 Meus An√∫ncios
            a(href="/logout") Sair 
        div.cards
            a(href="/product").card
                img(src="images/produto.png", alt="produto", class="img-product")
                strong.price R$ 10,00
                span.product-name Nome do produto 
                button.button Ver Produto 
            each ad in ads
                a(href=`/product/${ad.id}`, class="card")
                    img(src=ad.image, alt=ad.product, class="img-product")
                    div.card-text
                        strong.price R$ #{ad.price}
                        span.product-name #{ad.product}
                        button.button Ver Produto