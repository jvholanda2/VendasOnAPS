extend layout.pug
block content  
    <div class="content-login">
    <div class="wrapper-login">
        <form class="form-login" action="/product" method="post"> 
            <label>Novo Anuncio</label>
            <label>Produto</label>
            <input placeholder="Digite o nome do produto" name="product" id="product" required>
            <label>Preço</label>
            <input placeholder="Digite o preço do produto" name="price" id="price" required>
            <label>Descrição</label>
            <input placeholder="Digite a descrição do produto" name="description" id="description" required>
            <label>Link da Imagem</label>
            <input type="url" name="image" placeholder="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQBxKMuDTeQiUr9Gthk97A-69scwhaogzrqypB10Tiy&s" /> 
            <label>Quantidade disponível</label>
            <input type="number" name="quantity">
            <button class="button">Salvar</button>
            <div class="wrapper-login-links">
                <a href="/dashboard">Voltar</a>