extend layout.pug
block content  
    div.content
        div.content-title 
            h1 #{product.product}
            div
                a(href="/dashboard") Home 
                a(href="/logout") Sair 
        div.product
            div.image
                img(src=product.image, alt="produto", class="product-image")
            div.product-info
                strong.price #{product.price}
                p.description #{product.description}
                div.buttons-like
                    button.like 
                        img(src="/images/like.png", alt="produto", class="like-image")
                    button.dislike 
                        img(src="/images/dislike.png", alt="produto", class="dislike-image")
        div.buy-button 
            a(href="/dashboard").button Continuar Comprando 
            //- button(onclick=`deletarProduto(${product.id})`).button-del Deletar Produto
            a(href=`/deletead/${product.id}`).button-del Excluir An√∫ncio
            a(href="/cart").button#add-cart Adicionar ao Carrinho