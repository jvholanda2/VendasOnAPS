{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        // "indent": ["error", 4], // Define o tamanho da indentação para 4 espaços
        "quotes": ["error", "single"] // Usa aspas simples para strings
        // "semi": ["error", "always"], // Exige ponto e vírgula no final das instruções
        // "no-console": "warn", // Avisa sobre o uso de console.log
        // "no-unused-vars": "error", // Avisa sobre variáveis não utilizadas
        // "no-undef": "error", // Avisa sobre variáveis não definidas
        // "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }], // Limita o número de linhas em branco consecutivas
        // "no-trailing-spaces": "error", // Avisa sobre espaços no final das linhas
        // "comma-dangle": ["error", "always-multiline"], // Exige vírgula no final de objetos e arrays multi-linha
        // "arrow-parens": ["error", "always"], // Exige parênteses ao redor do parâmetro em funções de seta
        // "no-extra-semi": "error", // Avisa sobre ponto e vírgula extras
        // "no-const-assign": "error", // Avisa sobre tentativas de reatribuir uma constante
        // "no-var": "error", // Avisa sobre o uso de 'var' em vez de 'let' ou 'const'
        // "prefer-const": "error", // Avisa para preferir 'const' sempre que possível
        // "prefer-arrow-callback": "error" // Avisa para usar funções de seta em callbacks
    }
}
